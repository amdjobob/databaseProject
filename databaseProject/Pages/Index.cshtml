@page
@model databaseProject.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Market - Home</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #707070; }
        header { background-color: #ff6347; color: rgb(0, 0, 0); padding: 20px; text-align: center; }
        .nav { text-align: center; padding: 10px 0; background: #fff; border-bottom: 1px solid #ddd; }
        .nav a { margin: 0 15px; text-decoration: none; color: #555; font-weight: bold; }
        .hero { text-align: center; padding: 50px 20px; background-image: url('food-banner.jpg'); background-size: cover; color: white; }
        .hero h1 { font-size: 40px; margin-bottom: 20px; }
        .categories { display: flex; justify-content: center; gap: 20px; padding: 20px; }
        .category { width: 200px; text-align: center; border: 1px solid #8b8b8b; border-radius: 8px; padding: 15px; background: white; }
        .category img { max-width: 100%; height: auto; border-radius: 8px; }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to Your Market</h1>
    </header>
    <div class="nav">
        <a href="/">Home</a>
        <a href="/Products">Shop</a>
        <a href="/Cart">Cart</a>
        <a href="/Account/Login">Login</a>
    </div>
    <div class="hero">
        <h1>All these options</h1>
        <p>Discover our wide variety of products</p>
    </div>
    <div class="categories">
        <div class="category">
            <img src="~/Images/IndexFood.jpg" alt="MainMenuImg">

        </div>
        <div class="category">
            <img src="~/Images/IndexFood1.jpg" alt="MainMenuImg1">

        </div>
        <div class="category">
            <img src="~/Images/IndexFood2.jpg" alt="MainMenuImg2">
      
        </div>
    </div>
</body>
</html>
